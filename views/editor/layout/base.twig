<!DOCTYPE html>
<html lang="{{ site.language }}">
<head>
    <meta charset="{{ site.charset }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ block_title }} - Block Editor{% endblock %}</title>
    {% block styles %}
        {% for style in editor_styles %}
            <link rel="stylesheet" href="{{ style.href }}?ver={{ style.version }}">
        {% endfor %}
    {% endblock %}
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script>
        window.clientBlocksEditor = {{ client_blocks_editor_data|json_encode|raw }};
    </script>
</head>
<body class="client-blocks-editor-page">
    <div class="client-blocks-editor">
        {% block header %}{% endblock %}
        <div class="editor-container">
            {% block sidebar %}{% endblock %}
            <div class="editor-main">
                {% block main_content %}{% endblock %}
            </div>
        </div>
    </div>

    {% block scripts %}
        {% for script in editor_scripts %}
            <script src="{{ script.src }}?ver={{ script.version }}"></script>
        {% endfor %}
    {% endblock %}
</body>
</html>
